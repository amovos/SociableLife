<% include ../partials/header %>

<div class="container">
    <div class="row">
        <header class="jumbotron">
           <h1 style="text-align: center;">EDIT <%= activity.name %></h1> 
        </header>
        
        <div style="width:30%; margin: 0 auto;">
            <form action="/activities/<%= activity._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Activity Name</label>
                    <input class="form-control" type="text" name="Activity[name]" id="name" placeholder="e.g. Woodlarks Campsite" value="<%= activity.name %>">
                </div>
                <div class="form-group">
                    <label for="price">Price per Night (Â£)</label>
                    <input class="form-control" type="number" name="Activity[price]" id="price" placeholder="e.g. 15" value="<%= activity.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="Activity[location]" id="location" placeholder="e.g. Woodlarks Campsite, Farnham, Surrey" value="<%= activity.location %>">
                </div>
                <div class="form-group">
                    <label for="image">Image URL</label>
                    <input class="form-control" type="text" name="Activity[image]" id="image" placeholder="e.g. https://images.unsplash.com/..." value="<%= activity.image %>">
                </div>
                <div class="form-group">
                    <label for="image">Description</label>
                    <input class="form-control" type="text" name="Activity[description]" id="description" placeholder="e.g. A fully accessible campsite with an outdoor heated pool and a zipline!" value="<%= activity.description %>">
                </div>   
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>                     
            </form>
            <a href="javascript:history.back()">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>