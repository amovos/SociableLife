<% include ../partials/header %>

<div class="container">

    <% if(currentUser && currentUser.isAdmin){ %>
        <h1>You're an admin!</h1>
    <% } %>

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Sociable Life</h1>
            <p>View our hand-picked activities from all over the UK!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/activities">View Activities</a>
            </p>
            <form class="form-inline" action="/activities" method="GET">
                <div class="form-group">
                    <input class="form-control mr-1" type="text" name="search" placeholder="Activity search...">
                    <button class="btn btn-secondary">Search</button>
                </div>
            </form>
        </div>
    </header>

</div>

<% include ../partials/footer %>