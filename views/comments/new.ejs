<% include ../partials/header %>

<div class="container">
    <div class="row">
        <header class="jumbotron">
           <h1 style="text-align: center;">Add New Comment to <%= activity.name %></h1> 
        </header>
        
        <div style="width:30%; margin: 0 auto;">
            <form action="/activities/<%= activity._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>                     
            </form>
            <a href="/activities">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>